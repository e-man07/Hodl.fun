# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database (Neon PostgreSQL)
DATABASE_URL=""
DIRECT_URL=""
DATABASE_CONNECTION_LIMIT=20
DATABASE_POOL_TIMEOUT=10

# Redis (Local - Self-hosted with password)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD="hodlfun_redis_secure_password"

# Blockchain RPC Endpoints
PRIMARY_RPC_URL="https://evm.rpc-testnet-donut-node1.push.org/"
SECONDARY_RPC_URL=""
TERTIARY_RPC_URL=""

# Smart Contracts
TOKEN_FACTORY_ADDRESS="0xFB07792D0F71C7e385aC220bEaeF0cbF187233A0"
MARKETPLACE_ADDRESS="0x7f2F649125E1Cb4F5cC84DBF581Cd59b6311f46f"
START_BLOCK=1215287

# IPFS (Pinata)
PINATA_API_KEY="your_api_key"
PINATA_SECRET_KEY="your_secret_key"
PINATA_JWT="your_jwt_token"
PINATA_GATEWAY_URL="https://gateway.pinata.cloud/ipfs/"

# Caching Configuration
CACHE_ENABLED=true
CACHE_TTL_TOKEN_LIST=600000
CACHE_TTL_TOKEN_DETAILS=300000
CACHE_TTL_TOKEN_PRICE=60000
CACHE_TTL_METADATA=3600000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RPC_RATE_LIMIT=10
IPFS_RATE_LIMIT=20

# Indexer Configuration
INDEXER_ENABLED=true
INDEXER_POLL_INTERVAL=5000
INDEXER_BATCH_SIZE=50
INDEXER_CONFIRMATIONS=3
INDEXER_START_FROM_CURRENT=true

# Worker Configuration
WORKER_ENABLED=true
WORKER_CONCURRENCY=1

# Monitoring (Self-Hosted - No external services needed)
# Error logs stored in: ./logs/errors/
# Metrics dashboard: /api/v1/monitoring/dashboard
LOG_LEVEL=info

# Security & Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
ADMIN_ADDRESSES="0xYourAdminAddress1,0xYourAdminAddress2"
TRUSTED_IPS=""

# CORS
CORS_ORIGIN="http://localhost:3000,https://your-frontend-domain.vercel.app"
